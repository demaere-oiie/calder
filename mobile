source venv/bin/activate
prog=${2%.calder}.calder
case $1 in
    "fmt")
    cp $prog /tmp/$$
    python3 src/calder.py --format < /tmp/$$ > $prog
    ;;
    "dot")
    python3 src/calder.py --dot < $prog > ${prog%.calder}.dot
    ;;
    "json")
    python3 src/calder.py --json < $prog > ${prog%.calder}.json
    ;;
    "run")
    python3 src/calder.py < $prog
    ;;
esac
